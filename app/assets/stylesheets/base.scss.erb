///MIXINS
@mixin clearfix {
  &:after {
    content: "";
    display: table;
    clear: both;
  }
}

/*/////////////*/
/* BASE STYLES */
body {
  margin: 0;
  padding: 0;
  font-family: Montserrat, sans-serif;
  background-color: #111;
  color: #fff;
  line-height: 1.2;
}

*,
*:before,
*:after {
  box-sizing: inherit;
  line-height: inherit;
}

p {
  font-family: Roboto, sans-serif;
  font-weight: 300;
}

svg {
  fill: currentColor;
  height: 1em;
  padding: 0;
  margin: 0;
}

h1, h2, h3, h4, h5, h6 {
  margin: 0;
  font-size: inherit;
  font-weight: inherit;
  margin: 0;
}

button,
.button {
  outline: 0;
  display: block;
  cursor: pointer;
}

.flash {
  max-width: 500px;
  border-radius: 5px;
  text-align: center;
  margin: 20px auto;
  padding: 11px 0;
  cursor: pointer;
  @include clearfix;
  &.error {
    background: rgba(#bd3131, 0.8);
  }
  &.success {
    background: rgba(#229822, 0.8);
  }
  span {
    float: right;
    margin-right: 10px;
  }
}

a {
  color: inherit;
  text-decoration: none;
}

/*////////*/
/* LAYOUT */
.l-wrapper {
  max-width: 500px;
  margin: 0 auto;
  padding-bottom: 10px;
  background: #2c2c2c;
  box-shadow: 0 0 0 1px #787878;
}

/*/////////*/
/* MODULES */
.m-nav {
  background-color: #111;
  padding-left: 12px;
  border-bottom: 1px solid #787878;
  font-size: 20px;
  line-height: 1;
}

.m-nav div {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
}

.m-nav__logo {
  font-size: 30px;
  padding: 7px 0 0;
}

.m-nav__profile {
  color: #f68622;
  border-left: 1px solid #787878;
  padding: 12px;
  display: block;
}

.m-img {
  position: relative;
}

.m-img__canvas {
  width: 100%;
  display: block;
}

.m-about {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 1em;
  overflow: auto;
  line-height: 1.3;
  background-color: rgba(0,0,0,.5);
}

.m-about h1 {
  font-size: 1.5em;
}

.m-about a {
  color: #f6aa1c;
}

.m-upload {
  padding: 5px;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}

.m-upload .button {
  text-align: center;
  background-color: #111;
  color: #f6aa1c;
  padding: 10px;
  border-radius: 4px;
  flex: 1;
  margin: 5px;
  font-size: 12px;
  -webkit-transition: all .2s;
          transition: all .2s;
}
.m-upload .button:hover {
  background-color: #f6aa1c;
  color: #fff;
}

.m-disclaimer {
  padding: 0 5px;
  font-size: 10px;
  text-align: center;
}

.m-disclaimer p {
  margin: 0 0 10px;
}

.m-filter-select {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  overflow: auto;
  font-size: 0;
  padding: 0;
  margin: 0 0 -10px;
}

.m-filter-select__filter {
  display: block;
  min-width: 120px;
  background: none;
  color: inherit;
  border: none;
  margin: 0;
  padding: 0;
  text-align: center;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.m-filter-select__label {
  background-color: #111;
  display: block;
  margin: 0;
  padding: 10px;
  border: 0 solid #787878;
  border-width: 1px 0;
  white-space: nowrap;
}

.m-filter-select__filter img {
  display: block;
  margin: 10px 5px 10px;
  width: calc(100% - 10px);
}

.m-filter-select::-webkit-scrollbar {
  width: 3px;
  height: 3px;
  background-color: #111;
}

.m-filter-select::-webkit-scrollbar-thumb {
  background: #f6aa1c;
}

.m-about::-webkit-scrollbar {
  width: 3px;
  height: 3px;
  background-color: #111;
}

.m-about::-webkit-scrollbar-thumb {
  background: #f6aa1c;
}
