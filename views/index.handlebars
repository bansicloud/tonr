<div class="m-img">
  <canvas class="m-img__canvas" id="canvas" width="2000" height="2000"></canvas>
</div>

<div class="m-upload">
  <div id="button-container" class="m-upload__container">
    <div class="button" id="button">
      Upload image
    </div>
    <div class="button" id="download">
      Download image
    </div>
    <input type="file" id="file-input" name="file-input" style="display: none;">
  </div>
  <img id="uploaded-img" style="display: none;">
</div>

<div class="m-filter-select">
  <button class="m-filter-select__filter" data-filter="grayscale">
    <span class="m-filter-select__label">Grayscale</span>
    <img class="m-gallery__img" src="https://placekitten.com/200/200">
  </button>
  <button class="m-filter-select__filter" data-filter="cottoncandy">
    <span class="m-filter-select__label">Cotton Candy</span>
    <img class="m-gallery__img" src="https://placekitten.com/200/200">
  </button>
  <button class="m-filter-select__filter" data-filter="golden">
    <span class="m-filter-select__label">Golden</span>
    <img class="m-gallery__img" src="https://placekitten.com/200/200">
  </button>
  <button class="m-filter-select__filter" data-filter="galore">
    <span class="m-filter-select__label">Galore</span>
    <img class="m-gallery__img" src="https://placekitten.com/200/200">
  </button>
  <button class="m-filter-select__filter" data-filter="glow">
    <span class="m-filter-select__label">Glow</span>
    <img class="m-gallery__img" src="https://placekitten.com/200/200">
  </button>
</div>
